<Page x:Class="ConditerShop.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ConditerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage">

    <Grid Background="{DynamicResource Current}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" Background="{StaticResource Accent}" Height="80"  Margin="20" CornerRadius="40">
                <TextBlock x:Name="PageNameText" Foreground="{DynamicResource Current}" Text="Название раздела" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="42" FontWeight="Bold"/>
            </Border>

            <Border x:Name="BackButton" MouseDown="BackButton_MouseDown" Cursor="Hand" Background="{StaticResource Accent}" Height="80" Width="80"  Margin="20" CornerRadius="40">
                <TextBlock Foreground="{DynamicResource Current}" Text="❮" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="42" FontWeight="Bold" Margin="27,10,0,0"/>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <UniformGrid>
                <TextBox Margin="15" FontSize="22"/>
                <TextBox Margin="15" FontSize="22"/>
                <TextBox Margin="15" FontSize="22"/>
                <TextBox Margin="15" FontSize="22"/>
            </UniformGrid>

            <StackPanel Grid.Column="1" >
                <Button Margin="15" Height="60" Width="200">
                    <TextBlock Foreground="{DynamicResource Current}" Text="Добавить" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Button>

                <Button Margin="15,0,15,15" Height="60" Width="200">
                    <TextBlock Foreground="{DynamicResource Current}" Text="Удалить" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                </Button>
            </StackPanel>
        </Grid>

        <DataGrid Name="MainDataGrid" Grid.Row="1"/>
    </Grid>
</Page>
