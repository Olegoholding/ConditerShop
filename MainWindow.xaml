<Window x:Class="ConditerShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConditerShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1200">
    <Window.Resources>
             

    </Window.Resources>
    <Grid Background="{DynamicResource Current}">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="{StaticResource Accent}" Margin="70,100,70,30" CornerRadius="40">
            <TextBlock Foreground="{DynamicResource Current}" Text="Кондитерский магазин" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="72" FontWeight="Bold"/>
        </Border>

        <Border Grid.Row="1" Background="{StaticResource Accent}" Margin="30" CornerRadius="40">
            <UniformGrid>
                <Button x:Name="CandyTypeButton" Click="CandyTypeButton_Click" Margin="40">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0" Stretch="Uniform">
                            <Canvas Width="27" Height="31" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path StrokeThickness="2" Stroke="{DynamicResource Current}" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Stretch="Fill"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="19" Width="18" Canvas.Left="4.441" Canvas.Top="5.728">
                                    <Path.Data>
                                        <PathGeometry Figures="M5.7 21a2 2 0 0 1-3.5-2l8.6-14a6 6 0 0 1 10.4 6a2 2 0 1 1-3.464-2a2 2 0 1 0-3.464-2ZM17.75 7L15 2.1m-4.1 2.7L13 9m-5.1.7l2 4.4m-5 .6L7 18.9" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>

                        <TextBlock Grid.Column="1" Text="Виды конфет" Foreground="{DynamicResource Current}" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="36"/>
                    </Grid>
                </Button>

                <Button x:Name="ShopsButton" Click="ShopsButton_Click" Margin="40">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0" Stretch="Uniform">
                            <Canvas Width="27" Height="31" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path StrokeThickness="2" Fill="{DynamicResource Current}" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Stretch="Fill"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="15" Width="15" Canvas.Left="6.218" Canvas.Top="7.582">
                                    <Path.Data>
                                        <PathGeometry Figures="M882 272.1V144c0-17.7-14.3-32-32-32H174c-17.7 0-32 14.3-32 32v128.1c-16.7 1-30 14.9-30 31.9v131.7a177 177 0 0 0 14.4 70.4c4.3 10.2 9.6 19.8 15.6 28.9v345c0 17.6 14.3 32 32 32h274V736h128v176h274c17.7 0 32-14.3 32-32V535a175 175 0 0 0 15.6-28.9c9.5-22.3 14.4-46 14.4-70.4V304c0-17-13.3-30.9-30-31.9m-72 568H640V704c0-17.7-14.3-32-32-32H416c-17.7 0-32 14.3-32 32v136.1H214V597.9c2.9 1.4 5.9 2.8 9 4c22.3 9.4 46 14.1 70.4 14.1s48-4.7 70.4-14.1c13.8-5.8 26.8-13.2 38.7-22.1c.2-.1.4-.1.6 0a180.4 180.4 0 0 0 38.7 22.1c22.3 9.4 46 14.1 70.4 14.1c24.4 0 48-4.7 70.4-14.1c13.8-5.8 26.8-13.2 38.7-22.1c.2-.1.4-.1.6 0a180.4 180.4 0 0 0 38.7 22.1c22.3 9.4 46 14.1 70.4 14.1c24.4 0 48-4.7 70.4-14.1c3-1.3 6-2.6 9-4v242.2zm0-568.1H214v-88h596z" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>

                        <TextBlock Grid.Column="1" Text="Торговые точки" Foreground="{DynamicResource Current}" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="36"/>
                    </Grid>
                </Button>
                
                <Button x:Name="SuppliersButton" Click="SuppliersButton_Click" Margin="40">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0" Stretch="Uniform">
                            <Canvas Width="27" Height="31" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path StrokeThickness="2" Fill="{DynamicResource Current}" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Stretch="Fill"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="14" Width="18" Canvas.Left="4.369" Canvas.Top="8.354">
                                    <Path.Data>
                                        <PathGeometry Figures="M48 0C21.5 0 0 21.5 0 48v320c0 26.5 21.5 48 48 48h16c0 53 43 96 96 96s96-43 96-96h128c0 53 43 96 96 96s96-43 96-96h32c17.7 0 32-14.3 32-32s-14.3-32-32-32V237.3c0-17-6.7-33.3-18.7-45.3L512 114.7c-12-12-28.3-18.7-45.3-18.7H416V48c0-26.5-21.5-48-48-48zm368 160h50.7l77.3 77.3V256H416zM112 416a48 48 0 1 1 96 0a48 48 0 1 1-96 0m368-48a48 48 0 1 1 0 96a48 48 0 1 1 0-96" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>

                        <TextBlock Grid.Column="1" Text="Поставщики" Foreground="{DynamicResource Current}" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="36"/>
                    </Grid>
                </Button>
                
                <Button x:Name="JournalsButton" Click="JournalsButton_Click" Margin="40">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Column="0" Stretch="Uniform">
                            <Canvas Width="27" Height="31" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Path StrokeThickness="2" Fill="{DynamicResource Current}" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeEndLineCap="Round" Stretch="Fill"  HorizontalAlignment="Center" VerticalAlignment="Center" Height="18" Width="14" Canvas.Left="6.573" Canvas.Top="6.264">
                                    <Path.Data>
                                        <PathGeometry Figures="M2 18.5A1.5 1.5 0 0 0 3.5 20H5V0H3.5A1.5 1.5 0 0 0 2 1.5zM6 0v20h10a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm7 8H8V7h5zm3-2H8V5h8z" FillRule="NonZero"/>
                                    </Path.Data>
                                </Path>
                            </Canvas>
                        </Viewbox>

                        <TextBlock Grid.Column="1" Text="Журналы" Foreground="{DynamicResource Current}" FontWeight="Bold" VerticalAlignment="Center" Margin="15,0,0,0" FontSize="36"/>
                    </Grid>
                </Button>

            </UniformGrid>
        </Border>

        <ComboBox Name="ThemeComboBox" SelectionChanged="ThemeComboBox_SelectionChanged" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="20">
            <ComboBoxItem Content="Светлая"/>
            <ComboBoxItem Content="Тёмная"/>
        </ComboBox>
        <Frame Name="Frame" Grid.RowSpan="2" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
